<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
<f:Form id="idForm1" editable="true">
	<f:layout>
		<f:ResponsiveGridLayout
		 labelSpanXL="2"
          labelSpanL="2"
          labelSpanM="2"
          labelSpanS="12"
          adjustLabelSpan="false"
          emptySpanXL="0"
          emptySpanL="4"
          emptySpanM="0"
          emptySpanS="0"
          columnsXL="2"
          columnsL="2"
          columnsM="2"
          singleContainerFullSize="false"
		/>
	</f:layout>
<f:formContainers>
	<f:FormContainer>
		<f:formElements>
			<f:FormElement label="{i18n>coMaterial}">
				<f:fields>
					<Input id="idMat" showValueHelp="true" valueHelpRequest="onValueHelpRequest">
						<layoutData>
							<l:GridData span="L3 M3"></l:GridData>
						</layoutData>
					</Input>
					<Input id="idMatText" editable="false">
						<layoutData>
							<l:GridData span="L3 M3"></l:GridData>
						</layoutData></Input>
				</f:fields>
			</f:FormElement>
		</f:formElements>
	</f:FormContainer>
</f:formContainers>
</f:Form>
</core:FragmentDefinition>
